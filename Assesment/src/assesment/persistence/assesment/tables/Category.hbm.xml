<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="assesment.persistence.assesment.tables" >

	<class name="Category" table="categories">
		<id	column="id"	name="id" type="java.lang.Integer">
            <generator class="sequence">
            	<param name="sequence">Category_Sequence</param>
            </generator>
		</id>
	    
		<many-to-one name="groupId" column="groupId" not-null="true"/>
		
	    <property name="key" 	column="key" 			type="java.lang.String" 	not-null="true"/>
	    <property name="type" 	column="type" 			type="java.lang.Integer" 	not-null="true"/>
	    <property name="image" 	column="image" 			type="java.lang.String" 	/>
	    <property name="ord" 	column="ord" 			type="java.lang.Integer" 	not-null="true"/>

	    <property name="titleColor" 	column="titlecolor" 			type="java.lang.Integer" 	not-null="true"/>
	    <property name="itemColor" 	column="itemcolor" 			type="java.lang.Integer" 	not-null="true"/>
  	</class>

</hibernate-mapping>
