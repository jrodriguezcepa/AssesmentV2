<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 1.1//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="assesment.persistence.user.tables">
    <class name="ForgotPassword" table="forgotpassword">
		<id	column="id"	name="id" type="java.lang.Integer">
            <generator class="sequence">
            	<param name="sequence">ForgotPassword_Sequence</param>
            </generator>
		</id>
        <property	name="key"	type="java.lang.String"	column="key"/>
        <property	name="login"	type="java.lang.String"	column="login"/>
        <property	name="date"	type="java.sql.Timestamp"	column="date"/>
        <property name="used" type="java.lang.Boolean" not-null="true" >
			<column name="used" default="false" />
		</property>
    </class>

</hibernate-mapping>

