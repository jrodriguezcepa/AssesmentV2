<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 1.1//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="assesment.persistence.user.tables">
 <class name="UserPassword" table="userpassword">
  <id column="loginname" name="loginName" type="java.lang.String">
   <generator class="assigned"/>
  </id>
  <property column="password" generated="never" lazy="false"
   name="password" type="string"/>
  <property column="email" generated="never" lazy="false" name="email" type="string"/>
  <property column="mailSended" name="mailSended" type="boolean"/>
 </class>
</hibernate-mapping>
